@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
			<div id="carouselExampleSlidesOnly" class="carousel slide shadow rounded" data-bs-ride="carousel">
				<div class="carousel-inner h-100">
					<div class="carousel-item h-100 active">
						<img src="images/carouselimages/Pizzas.jpg"
							 class="d-block w-100 h-100" alt="Recipes">
					</div>
					<div class="carousel-item">
						<img src="/images/carouselimages/Burgers.jpg"
							 class="d-block w-100 h-100" alt="Recipes">
					</div>
					<div class="carousel-item">
						<img src="/images/carouselimages/Tacos.jpg"
							 class="d-block w-100 h-100" alt="Recipes">
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
			<div class="nb-3">
				<h2>
					Get The Best <span class="text-success fst-italic">Food</span> From
					<span class="text-success">The Best Restaurants</span>
				</h2>
			</div>
			<div class="nb-3 p-3">
				<span><i class="fa-solid fa-seedling text-success mx-2 fs-4"></i></span>
				<span class="fs-5 text-dark fst-italic">Fresh Food</span>
			</div>
			<div class="nb-3 p-3">
				<span><i class="fa-solid fa-heart mx-2 fs-4" style="color: #ff0000;"></i></span>
				<span class="fs-5 text-dark fst-italic">Healthy Meal</span>
			</div>
			<div class="nb-3 p-3">
				<span><i class="fa-solid fa-person-biking mx-2 fs-4" style="color: #74C0FC;"></i></span>
				<span class=" fs-5 text-dark fst-italic">Fastest Delivery</span>
				<p class="py-2">We Promise Deliver Order within 30 Min</p>
			</div>
		</div>
	</div>
