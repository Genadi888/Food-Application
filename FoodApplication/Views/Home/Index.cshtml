						<div class="card-body">
							<h5 class="card-title text-dark">Pizza</h5>
							<div class="d-flex flex-wrap justify-content-between">
							   <a href="/Recipe/Order?id=5ed6604591c37cdc054bcc13"
							    class="btn btn-sm bg-black text-white shadow rounded p-2">Order</a>
								
								@if (User.Identity.IsAuthenticated)
								{
									<span class="addToCartIcon" onclick="cart.call(this)"
									data-recipeId="5ed6604591c37cdc054bcc13">
										<i class="fa-regular fa-heart fs-3"></i>
									</span>
								}
							</div>

						</div>
					</div>
