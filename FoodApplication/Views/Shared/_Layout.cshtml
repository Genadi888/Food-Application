<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-red" asp-area="" asp-controller="Home" asp-action="Index">Food Application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-red fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-red fw-bold" asp-area="" asp-controller="Recipe" asp-action="Index">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-red fw-bold" asp-area="">Menu</a>
                        </li>
                    </ul>
                        @*@User.FindFirst(User.Identity.AuthenticationType)*@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="d-flex justify-content-center align-content-center">
                                    <div class="text-center">
                                    <span class="p-4" id="cartListIcon"><i class="fa-solid fa-cart-shopping text-pink fs-4"></i></span>
                                        <div id="showCartList" 
                                            class="position-absolute shadow-lg rounded p-2 bg-white">
                                        </div>
                                </div>
                                <div>
                                    <a class="nav-link fw-bold text-pink"
                                         asp-controller="Account" asp-action="LogOut">LogOut</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div>
                                 <a class="nav-Link fw-bold text-pink m-3 p-0" asp-controller="Account"
                                    asp-action="Login">LogIn</a>
                            </div>
                            <div>
                            <a class="nav-Link fw-bold text-pink m-3 p-0" asp-controller="Account"
                                    asp-action="Register">Register</a>
                            </div>
                        }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-white">
        <div class="container">
           <div class="row">
               <div class="col-sm-4 col-md-4 col-lg-4">
                   <p>Food Aplication</p>
                   <p>Healthy,Save and Fast</p>

               </div>
               <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
               <p>Contact US</p>
               <div class="mt-3">
                   <span><i class="fa-brands fa-instagram fs-4"></i></span>
                   <span class="fs-6 mx-1"> Instagram</span>
               </div>
               <div class="mb-1">
                   <scan><i class="fa-brands fa-whatsapp fs-4"></i></scan>
                        <span class="fs-6 mx-1"> Whatsapp</span>
               </div>
               <div class="mb-1">
                   <span><i class="fa-brands fa-facebook fs-4"></i></span>
                        <span class="fs-6 mx-1"> Facebook</span>
               </div>
               <div class="mb-1">
                        <span><i class="fa-regular fa-envelope fs-4"></i></span>
                        <span class="fs-6 mx-1"> Mail</span>
               </div>
           </div>
           <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
               <h4>Adress</h4>
               <pre>Bulgaria, Plovdiv</pre>
           </div>
        </div>
        <p class="text-centre">Powered By</p>
    </div>
      
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                getAddedCarts();
                getCartList();
            })
            </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
